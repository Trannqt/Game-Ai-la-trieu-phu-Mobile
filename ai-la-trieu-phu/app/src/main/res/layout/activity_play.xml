<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/mainplay"
    android:paddingTop="16dp"    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nội Dung Câu Hỏi"
        android:id="@+id/tvQuestion"
        android:textColor="#FFFFFFFF"
        android:layout_below="@+id/tvTimer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />

    <TextView
        android:background="#07000000"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/tvTimer"
        android:textColor="#FFFFFFFF"
        android:layout_below="@+id/btnAsk"
        android:layout_alignLeft="@+id/btnAsk"
        android:layout_alignStart="@+id/btnAsk"
        android:text="TIMER"
        android:textAlignment="center"
        android:gravity="center_vertical"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác Nhận"
        android:id="@+id/btnConfirm"
        android:layout_above="@+id/tvScore"
        android:layout_alignLeft="@+id/btnSwap"
        android:layout_alignStart="@+id/btnSwap" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/tvQuestion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/rdGroup"
        android:layout_above="@+id/btnConfirm"
        android:focusable="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:id="@+id/rdbA"
            android:checked="false"
            android:textColor="#FFFFFFFF"

            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:id="@+id/rdbB"
            android:checked="false"
            android:textColor="#FFFFFFFF"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/rdbC"
            android:checked="false"
            android:textColor="#FFFFFFFF"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:id="@+id/rdbD"
            android:checked="false"
            android:textColor="#FFFFFFFF"
            />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Số Tiền Hiện Tại: "
        android:id="@+id/tvScore"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50/50"
        android:id="@+id/btn50"
        android:layout_alignTop="@+id/btnSwap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi Câu Hỏi"
        android:id="@+id/btnSwap"
        android:layout_alignTop="@+id/btnAsk"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hỏi Ý Kiến"
        android:id="@+id/btnAsk"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>